<view class="outer">
  <view class="top">
    <view class="wx-view_cPj0ok" data-c_e_id="wx_viewe7d22733">
                        <text class="c-block wx-text_TvHPc9" data-c_e_id="wx_textc242c6b3" style='font-weight:700'>{{topic_data['title']}}</text>
                        <text class="c-block wx-text_LS2Jup" data-c_e_id="wx_text1b1fa35d">{{topic_data['description']}}</text>
                    </view>
  </view>

  <view class="middle">
    <view class="reply_num">
      <text style='font-weight:700;font-size:small'>{{topic_data['comment'].length}}个回答</text>
    </view>
    <navigator class="edit" url="../answer/answer?id={{id}}" >
      <image src="../../images/new.png" mode='aspectFit' style='width:70%;height:70%;'/>
    </navigator>
  </view>

  <view class="reply_list" wx:for= "{{topic_data['comment']}}">
    <view class="wx-view_JbWxfk" data-c_e_id="wx_view36a5f58d">
        <view class="carditem01" data-c_e_id="wx_view2f47d002">
            <view class="wx-view_QvvUkU" data-c_e_id="wx_view9a26c020">
                <navigator class="wx-navigator_rv4BGW" data-c_e_id="wx_navigator3a0627f6" hover-class="navigator-hover" url="../reply/reply?title={{topic_data['title']}}&content={{item['content']}}&avatarURL={{item['avatarURL']}}&nickname={{item['nickname']}}">
                    <image class="wx-image_tBcdCT" data-c_e_id="wx_image9a4b5d06" mode="aspectFill" src="{{item[avatarURL]}}" style="background-size: cover; background-position: center center; background-repeat: no-repeat; background-image: url({{item['avatarURL']}}); "/>
                    <view class="wx-view_cPj0ok" data-c_e_id="wx_viewe7d22733">
                        <text class="c-block wx-text_TvHPc9" data-c_e_id="wx_textc242c6b3">{{item['nickname']}}</text>
                        <text class="c-block wx-text_LS2Jup" data-c_e_id="wx_text1b1fa35d"></text>
                    </view>
                </navigator>
            </view>
            <navigator class="wx-navigator_PNd8QQ" data-c_e_id="wx_navigator860bf338" hover-class="navigator-hover" url="../reply/reply">
                <view class="wx-view_KedDbI" data-c_e_id="wx_view1bcd6050">
                    <text class="c-block wx-text_6zTs4l" data-c_e_id="wx_textcdf69eb9">{{item['content']}}</text>
                </view>
            </navigator>
            <view class="wx-view_adF7Mw" data-c_e_id="wx_viewaae1fe30">
              <view class="wx-view_2gazUr" data-c_e_id="wx_view1624e513">
                  <view class="wx-view_DKe6UT" data-c_e_id="wx_view4d891ef3">
                      <image wx:if="{{item.liked}}" class="wx-image_6E2A1o" data-c_e_id="wx_image5c6e2207" mode="aspectFit" src="../../images/like.png" style="background-size: contain; background-position: center center; background-repeat: no-repeat;"/>
                      <image wx:else class="wx-image_6E2A1o" data-c_e_id="wx_image5c6e2207" mode="aspectFit" src="../../images/notlike.png" style="background-size: contain; background-position: center center; background-repeat: no-repeat;"/>
                      <text class="c-block wx-text_id0VJj" data-c_e_id="wx_text503770aa">0</text>
                  </view>
              </view>
              <text class="c-block wx-text_9Wn0Di" data-c_e_id="wx_text3f27bb93">时间</text>
            </view>
        </view>
    </view>
  </view>
</view>