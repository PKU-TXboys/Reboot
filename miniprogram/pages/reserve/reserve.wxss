/* pages/reserve/reserve.wxss */
.page{
  padding: 10px;
  
}
.title {
  display: flex;
  width: 100%;
  justify-content: center;
  height: 8rem;
  align-items: center;
}
.title image{
  height: 3rem;
  width: 3rem;
  left: 0;
  border-radius: 50%;
  padding: 5px;
}
.title text{
  font-size: 32px;
}
.form view{
  font-size: 14px;
  padding: 2px;
}
.form .td{
  background-color: #fff;
}
.form input{
  border: solid 1px #eee;
}
.form picker view{
  border: solid 1px #eee;
  background-color: #f8f8f8;
}
.form textarea{
  border: solid 1px #eee;
  width: 100%;
  height: 80px;
}
.form button{ 
  width: 50%;
  padding: 0;
}