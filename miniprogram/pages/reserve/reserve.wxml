<!--pages/reserve/reserve.wxml-->
<view class='page'>
  <view class='title'>
    <view>
      <image src='../../images/logo.png'></image>
    </view>
    <view>
      <text> 电脑小队预约 </text>
    </view>
  </view>
  <!-- 预约表格 -->
  <view class='form'>
    <form bindsubmit="formSubmit" bindreset="formReset">
      <view>
        <view>姓名</view>
        <input type='text' name="name" placeholder="张XX" />
      </view>
      <view>
        <view>类型</view>
        <picker range='["硬件", "软件", "清灰"]'>
          <view class="picker">
            当前选择：
          </view>
        </picker>
      </view>
      <view>
        <view>联系方式</view>
        <input type='text' name="grade" placeholder="手机号或微信号" />
      </view>
      <view>
        <view>电脑型号</view>
        <input type='text' name="type" placeholder="如Thinkpad 430" />
      </view>
      <view>
        <view>问题描述</view>
        <textarea name="description" placeholder="问题描述" />
      </view>
      <view style='display:flex; margin:10px'>
        <button form-type="submit">Submit</button>
        <button form-type="reset">Reset</button>
      </view>
    </form>
  </view>
</view>
