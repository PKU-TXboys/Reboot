/* pages/activitylist/activitylist.wxss */
.page{
  padding: 10px;
}
.table {
  border: 0px solid darkgray;
}
.title {
  display: flex;
  width: 100%;
  justify-content: center;
  height: 8rem;
  align-items: center;
}
.title image{
  height: 5rem;
  width: 5rem;
  left: 0;
  border-radius: 50%;
}
.title text{
  font-size: 28;
}
.tr {
  display: flex;
  width: 100%;
  justify-content: center;
  height: 3rem;
  align-items: center;
}
.td {
    width:40%;
    justify-content: center;
    text-align: center;
}
.bg-w{
  background: snow;
}
.bg-g{
  background: #E6F3F9;
}
.th {
  width: 40%;
  justify-content: center;
  background: #3366FF;
  color: #fff;
  display: flex;
  height: 3rem;
  align-items: center;
}